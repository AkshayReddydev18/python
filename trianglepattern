x = int(input("Enter 1st Number: "))
for i in range(x):
    for j in range(x-i):
        print(chr(65+j),end='')
    # for j in range(2*i+1):
    # if i == 0:
    #     pass
    # else:
    print(' '*(2*i-1),end='')
        
    for j in range(x - i - 1 if i != 0 else x - i - 2, -1, -1):
        print(chr(65+j),end='')
    print()